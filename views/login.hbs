{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Error:</strong>
    {{errorMessage}}
  </div>
{{/if}}

<form action="/login" method="POST">

  <input
    type="text"
    id="userName"
    name="userName"
    placeholder="User Name"
    required
  />
  <br /><br />

  <input
    type="password"
    id="password"
    name="password"
    placeholder="Password"
    required
  />
  <br /><br />
  <button type="submit" class="btn btn-primary">Login</button>
</form>