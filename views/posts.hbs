<div class="row">
  <div class="col-md-12">
    <h2>Posts
      <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
    <hr />

    <div class="table-responsive">
      <table class="table">
        {{#if posts}}
          <tr>
            <th>Post&nbsp;ID</th>
            <th>Title</th>
            <th>Post&nbsp;Date</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
          </tr>
          {{#each posts}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              {{#if postDate}}
                <td>{{#formatDate postDate}}{{/formatDate}}</td>
              {{else}}
                <td></td>
              {{/if}}
              <td><a
                  href="/posts?category={{categoryId}}"
                >{{categoryId}}</a></td>
              <td>{{published}}</td>
              <td><a
                  href="/posts/delete/{{id}}"
                  class="btn btn-danger"
                >remove</a></td>
            </tr>
          {{/each}}
        {{/if}}
        {{#unless posts}}
          <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
          </div>

        {{/unless}}
      </table>
    </div>

  </div>
</div>