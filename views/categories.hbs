<div class="row">
  <div class="col-md-12">
    <h2>Categories  <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
    <hr />

<div class="table-responsive">
        <table class="table ">
         {{#if categories}}
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Remove</th>
            </tr>
            {{#each categories}}
                <tr>
                    <th><a href="/posts?category={{id}}">{{id}}</a></th>
                    <th><a href="/posts?category={{id}}">{{category}}</a></th>
                    <th><a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a></th>
                </tr>
            {{/each}}
            {{/if}}

            {{#unless categories}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{/unless}}
  </div>
</div>